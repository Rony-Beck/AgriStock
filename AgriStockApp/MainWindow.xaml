<Window x:Class="AgriStockApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:AgriStockApp"
        mc:Ignorable="d"
        Background="#FF171F27"
        TextElement.Foreground="#FFE6E6E6"
        Title="AgriStock Data Analyst" MinHeight="600" MinWidth="1000">
    <Window.Resources>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#FF171F27"/>
            <Setter Property="BorderBrush" Value="#FF171F27"/>
        </Style>
    </Window.Resources>
    <Grid>
        <!--Page Holder-->
        <ContentControl x:Name="pageHolder" Content="{Binding}" Margin="10,10,10,10"/>
    </Grid>
</Window>
